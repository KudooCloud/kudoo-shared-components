{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "jsx": "react",
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true,
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "shared/*": ["./*"],
      "components/*": ["./src/*"],
      "images/*": ["./src/assets/images/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", "./index.d.ts"]
}
